<?xml version="1.0"?> 
<!-- continuous-continuous Manipulator -->
<robot name="ales" 
  xmlns:xacro="http://www.ros.org/wiki/xacro"
  xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller">  

  <!-- Import all Gazebo-customization elements, including Gazebo colors -->
  <xacro:include filename="$(find ales_description)/urdf/ales.gazebo" />
  <xacro:include filename="$(find ales_description)/urdf/ales.transmission" />


  <link name="base_footprint">
      <origin xyz="0 0 0.0" rpy="0 0 0" />
      <inertial>
        <mass value="0.0001" />
        <origin xyz="0 0 0" />
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
                 iyy="0.0001" iyz="0.0" 
                 izz="0.0001" />
      </inertial>
      <visual>
        <origin xyz="0 0 0.0" rpy="0 0 0" />
        <geometry>
          <box size="0.001 0.001 0.001" />
        </geometry>
      </visual>
      
      <collision>
        <origin xyz="0 0 0.0" rpy="0 0 0" />
        <geometry>
          <box size="0.001 0.001 0.001" />
        </geometry>
      </collision>
  </link>
    
  <link name="base_link">
    <inertial>
        <mass value="15" />
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                 iyy="1.0" iyz="0.0" 
                 izz="1.0" />
    </inertial>
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
              <mesh filename="package://ales_description/meshes/ales_chassis.dae" />
          </geometry>
      </visual>
      <collision>
          <origin xyz="0 0 0" rpy="0 0 0" />
          <geometry>
              <mesh filename="package://ales_description/meshes/ales_chassis.dae" />
          </geometry>
      </collision>
  </link>
  
  <joint name="base_footprint_joint" type="fixed">
      <origin xyz="0 0 0" rpy="0 0 0" />
      <parent link="base_footprint"/>
      <child link="base_link" />
  </joint>  

  
  <link name="front_right_wheel_link">
    <inertial>
        <mass value="5" />
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia  ixx="1.0" ixy="0.0" ixz="0.0"
                  iyy="1.0" iyz="0.0"
                  izz="1.0" />
    </inertial>
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
            <mesh filename="package://ales_description/meshes/ales_wheel.dae"/>
        </geometry>
    </visual>
    <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>                                      
            <mesh filename="package://ales_description/meshes/ales_wheel.dae"/>
        </geometry>
    </collision>
  </link>


  <link name="rear_right_wheel_link">
    <inertial>
        <mass value="5" />
        <origin xyz="0 0 0" rpy="0 0 0" />
        <inertia  ixx="1.0" ixy="0.0" ixz="0.0"
                  iyy="1.0" iyz="0.0"
                  izz="1.0" />
    </inertial>
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
            <mesh filename="package://ales_description/meshes/ales_wheel.dae"/>
        </geometry>
    </visual>
    <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>                                      
            <mesh filename="package://ales_description/meshes/ales_wheel.dae"/>
        </geometry>
    </collision>
  </link>  

  
  <link name="front_left_wheel_link">
    <inertial>
        <mass value="5" />
        <origin xyz="0 0 0" rpy="0 0 0" />
        <inertia  ixx="1.0" ixy="0.0" ixz="0.0"
                  iyy="1.0" iyz="0.0"
                  izz="1.0" />
    </inertial>
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
            <mesh filename="package://ales_description/meshes/ales_wheel.dae"/>
        </geometry>
    </visual>
    <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>                                      
            <mesh filename="package://ales_description/meshes/ales_wheel.dae"/>
        </geometry>
    </collision>
  </link>

  <link name="rear_left_wheel_link">
    <inertial>
        <mass value="5" />
        <origin xyz="0 0 0" rpy="0 0 0" />
        <inertia  ixx="1.0" ixy="0.0" ixz="0.0"
                  iyy="1.0" iyz="0.0"
                  izz="1.0" />
    </inertial>
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
            <mesh filename="package://ales_description/meshes/ales_wheel.dae"/>
        </geometry>
    </visual>
    <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>                                      
            <mesh filename="package://ales_description/meshes/ales_wheel.dae"/>
        </geometry>
    </collision>
  </link>

  <joint name="front_left_wheel_joint" type="continuous">
    <parent link="base_link" />
    <child link="front_left_wheel_link" />
    <axis xyz="1 0 0" />
    <origin xyz="0.2870 -0.381 -0.121" rpy="0 0 0" />
    <dynamics damping="0.7"/>    
    <limit effort="100" velocity="200" />
  </joint> 

  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="base_link" />
    <child link="rear_left_wheel_link" />
    <axis xyz="1 0 0" />
    <origin xyz="0.2870 0.1790 -0.121" rpy="0 0 0" />
    <dynamics damping="0.7"/>  
    <limit effort="100" velocity="200" />
  </joint>  

  <joint name="front_right_wheel_joint" type="continuous">
    <parent link="base_link" />
    <child link="front_right_wheel_link" />
    <axis xyz="1 0 0" />
    <origin xyz="-0.300 -0.381 -0.121" rpy="0 0 0" />
    <dynamics damping="0.7"/>  
    <limit effort="100" velocity="200" />
  </joint>
  
  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="base_link" />
    <child link="rear_right_wheel_link" />
    <axis xyz="1 0 0" />
    <origin xyz="-0.300 0.1790 -0.121" rpy="0 0 0" />
    <dynamics damping="0.7"/>
    <limit effort="100" velocity="200" />
  </joint>  
  
</robot>
